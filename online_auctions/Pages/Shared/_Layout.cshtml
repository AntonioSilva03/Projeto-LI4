<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CO:GA</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/online_auctions.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand text-light" asp-area="" asp-page="/Index">
                    Ligma Balls
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav ms-auto align-items-center">
                        <li class="nav-item me-2">
                            <a class="nav-link text-dark bg-light rounded border border-secondary" asp-area="" asp-page="/criar_leilao/criar_leilao">Criar Leilão</a>
                        </li>

                        <li class="nav-item me-2">
                            <a class="nav-link d-flex align-items-center" asp-area="" asp-page="/leiloes_favoritos/leiloes_favoritos">
                                <img src="~/imgs/leiloes_favoritos.png" class="mr-2" style="height: 40px;">  
                            </a>
                        </li>

                        <li class="nav-item me-2">
                            <a class="nav-link text-dark bg-light rounded border border-secondary" asp-area="" asp-page="">1000.00€</a>
                        </li>

                        <li class="nav-item me-2">
                            <a class="nav-link text-white" asp-area="" asp-page="/perfil/perfil">
                                <img src="~/imgs/perfil.png" class="mr-2" style="height: 40px;">
                            </a>
                        </li>

                        <li class="nav-item">
                            <img src="~/imgs/logout.png" class="mr-2" style="height: 40px;">
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - online_auctions - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>